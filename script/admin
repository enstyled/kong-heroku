#!/bin/bash
set -e

./docker-entrypoint.sh kong docker-start &

# Give Kong a moment to boot
sleep 3

# Update or create the admin service
curl -sS -X PUT http://127.0.0.1:8001/services/admin \
  --data host=127.0.0.1 \
  --data port=8001

# Update or create the admin route
curl -sS -X PUT http://127.0.0.1:8001/routes/admin \
  --data paths[]=/admin \
  --data service.name=admin

# Enable the CORS plugin on the admin
curl -sS -X POST http://127.0.0.1:8001/services/admin-api/plugins \
  --data "name=cors" \
  --data "config.origins=*" \
  --data "config.headers=Content-Type" \
  --data "config.headers=apikey" \
  --data "config.max_age=3600"


# Update or create the admin UI service
curl -sS -X PUT http://127.0.0.1:8001/services/manager \
 --data host=127.0.0.1 \
 --data port=8002

# Create the admin UI route
curl -sS -X POST http://127.0.0.1:8001/routes \
 --data paths[]=/ \
 --data service.name=manager

./docker-entrypoint.sh kong stop